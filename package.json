{
    "name": "@sealad886/homebridge-blink-cameras-new-api",
    "displayName": "Homebridge Blink Cameras (New API)",
    "version": "0.5.5",
    "description": "Blink Camera plugin for homebridge",
    "author": {
        "name": "sealad886",
        "email": "dev@andrewcox.doctor"
    },
    "license": "MIT",
    "homepage": "https://github.com/sealad886/homebridge-blink-cameras-new-api",
    "bugs": {
        "url": "https://github.com/sealad886/homebridge-blink-cameras-new-api/issues"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/sealad886"
        },
        {
            "type": "buymeacoffee",
            "url": "https://www.buymeacoffee.com/sealad886"
        }
    ],
    "keywords": [
        "homebridge-plugin",
        "blink-home-security",
        "homebridge-blink",
        "blink",
        "homebridge",
        "homekit",
        "cameras",
        "home-security"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "config.schema.json"
    ],
    "homebridge": {
        "pluginAlias": "BlinkCameras",
        "pluginType": "platform",
        "schema": "config.schema.json",
        "customUi": "dist/homebridge-ui/server.js"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/sealad886/homebridge-blink-cameras-new-api.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=18.0.0",
        "homebridge": ">=1.11.1"
    },
    "dependencies": {
        "@homebridge/plugin-ui-utils": "^2.1.2",
        "async-lock": "^1.4.1"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.2.0",
        "@oznu/homebridge-types": "*",
        "@types/async-lock": "^1.4.2",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.9",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "eslint": "^9.39.2",
        "homebridge": "^1.11.1",
        "jest": "^30.2.0",
        "nodemon": "^3.1.11",
        "npm-check-updates": "^19.3.1",
        "prettier": "^3.8.0",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3",
        "jest-util": "*"
    },
    "peerDependencies": {
        "homebridge": ">=1.11.1"
    },
    "scripts": {
        "build": "tsc && npm run copy-ui-assets",
        "copy-ui-assets": "mkdir -p dist/homebridge-ui/public && cp -r src/homebridge-ui/public/* dist/homebridge-ui/public/",
        "watch": "npm run build && nodemon",
        "watch:homebridge": "npm run watch",
        "watch:ts": "tsc --watch",
        "prepublishOnly": "npm run build",
        "test": "jest",
        "lint": "eslint \"src/**/*.ts\"",
        "clean": "rm -rf dist",
        "release": "node ./scripts/release.mjs",
        "check": "npm install && npm outdated",
        "update": "ncu -u && npm update && npm install"
    }
}
